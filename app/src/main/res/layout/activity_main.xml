<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.circlemenu.MainActivity">

    <Button
        android:id="@+id/bt_top"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="#00ff08"
        android:text="top"
        />

    <Button
        android:id="@+id/bt_left"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="#b3ff00"
        android:text="left"
        />

    <Button
        android:id="@+id/bt_right"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="#00eeff"
        android:text="right"
        />

    <Button
        android:id="@+id/bt_bottom"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="#ff1e00"
        android:text="bottom"
        />

    <Button
        android:id="@+id/bt_center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="#35a8f5"
        android:text="center"
        />


    <LinearLayout
        android:id="@+id/ll_measure_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/bt_nibp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/nibp_icon"
            android:background="@mipmap/menu_top_bg"
            android:text="血压"/>
        <Button
            android:id="@+id/bt_glu"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/glu_icon"
            android:background="@mipmap/menu_bg"
            android:text="血糖"/>
        <Button
            android:id="@+id/bt_temp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/tem_icon"
            android:background="@mipmap/menu_bg"
            android:text="体温"/>
        <Button
            android:id="@+id/bt_fat"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/fat_icon"
            android:background="@mipmap/menu_bg"
            android:text="体脂"/>
        <Button
            android:id="@+id/bt_fhr"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/fhr_icon"
            android:background="@mipmap/menu_bottom_bg"
            android:text="胎心"/>
    </LinearLayout>
        <ImageButton
            android:id="@+id/bt_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/menu_press"
            />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick=""/>
</RelativeLayout>
